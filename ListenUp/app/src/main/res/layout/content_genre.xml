<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_genre" tools:context="musicnow.listenup.Genre">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/b_h"
        android:textSize="20sp"
        android:text="Rock"
        android:id="@+id/Rock"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="rockPlaylist"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/b_h"
        android:textSize="20sp"
        android:text="Rap"
        android:id="@+id/rap"
        android:layout_below="@+id/Rock"
        android:layout_centerHorizontal="true"
        android:onClick="rapPlaylist"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/b_h"
        android:textSize="20sp"
        android:text="Soul"
        android:id="@+id/soul"
        android:layout_below="@+id/rap"
        android:layout_centerHorizontal="true"
        android:onClick="soulPlaylist"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/b_h"
        android:textSize="20sp"
        android:text="Oldies"
        android:id="@+id/oldies"
        android:layout_below="@+id/soul"
        android:layout_centerHorizontal="true"
        android:onClick="oldiesPlaylist"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/b_h"
        android:textSize="20sp"
        android:text="Showtunes"
        android:id="@+id/musicals"
        android:layout_below="@+id/oldies"
        android:layout_centerHorizontal="true"
        android:onClick="showtunesPlaylist"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/b_h"
        android:textSize="20sp"
        android:text="Funk"
        android:id="@+id/funk"
        android:layout_below="@+id/musicals"
        android:layout_centerHorizontal="true"
        android:onClick="funkPlaylist"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/b_h"
        android:textSize="20sp"
        android:text="Jazz"
        android:id="@+id/jazz"
        android:layout_below="@+id/funk"
        android:layout_centerHorizontal="true"
        android:onClick="jazzPlaylist"
        />


    <Button
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back2"
        android:layout_below="@+id/jazz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="toMain"
        />

</RelativeLayout>
