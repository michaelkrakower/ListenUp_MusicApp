<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pick your favorite genre: (2)"
        android:textSize="30sp"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Rap"
        android:textSize="@dimen/standard_text"
        android:id="@+id/button21"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="@dimen/four_q"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Pop"
        android:id="@+id/button22"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/button21"
        android:textSize="@dimen/standard_text"
        android:layout_marginTop="@dimen/four_q"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="EDM"
        android:textSize="@dimen/standard_text"
        android:id="@+id/button23"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button22"
        android:layout_marginTop="@dimen/four_q"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Showtunes"
        android:textSize="@dimen/standard_text"
        android:id="@+id/button24"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/button23"
        android:layout_marginTop="@dimen/four_q"
        />
</LinearLayout>