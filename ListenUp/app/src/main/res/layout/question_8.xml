<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mexican Restaurant of choice?"
        android:textSize="30sp"
        android:paddingLeft="16sp"
        android:paddingTop="16sp"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Chipotle"
        android:id="@+id/button29"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/textView7"
        android:textSize="@dimen/standard_text"
        android:layout_marginTop="@dimen/three_q"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Moe's"
        android:textSize="@dimen/standard_text"
        android:id="@+id/button30"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/button29"
        android:layout_marginTop="@dimen/three_q"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Qdoba"
        android:id="@+id/button31"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/button30"
        android:layout_marginTop="@dimen/three_q"
        android:textSize="@dimen/standard_text"
        />

</LinearLayout>