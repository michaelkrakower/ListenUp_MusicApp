<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What is your favorite season?"
        android:textSize="30sp"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:textSize="@dimen/standard_text"
        android:text="Spring"
        android:id="@+id/spring"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/textView5"
        android:layout_marginTop="@dimen/four_q"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Summer"
        android:textSize="@dimen/standard_text"
        android:id="@+id/summer"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/spring"
        android:layout_marginTop="@dimen/four_q"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Fall"
        android:textSize="@dimen/standard_text"
        android:id="@+id/fall"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/summer"
        android:layout_marginTop="@dimen/four_q"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/q_height"
        android:text="Winter"
        android:textSize="@dimen/standard_text"
        android:id="@+id/winter"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/fall"
        android:layout_marginTop="@dimen/four_q"

        />

</LinearLayout>